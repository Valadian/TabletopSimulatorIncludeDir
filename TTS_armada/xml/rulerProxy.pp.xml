<VerticalLayout color="black"
    id="rulerProxyPopup"
    height="300"
    width="150"
    rectAlignment="UpperLeft"
    allowDragging="true"
    returnToOriginalPositionWhenReleased="false"
    offsetXY="100 0"
    outlineSize="1 1"
    outline="#303030">

    <VerticalLayout padding="10 10 0 10">
        <Text fontStyle="bold" fontSize="24" alignment="MiddleLeft" color="yellow" padding="5 20 3 3"> Ruler </Text>
        <?foreach I in 4;3;2;1;0?>
        <HorizontalLayout>
            <Button class="rulerTurn" id="ruler_-1_2_$(var.I)">II</Button>
            <Button class="rulerTurn" id="ruler_-1_1_$(var.I)">I</Button>
            <Button class="rulerTurn" id="ruler_0_0_$(var.I)">-</Button>
            <Button class="rulerTurn" id="ruler_1_1_$(var.I)">I</Button>
            <Button class="rulerTurn" id="ruler_1_2_$(var.I)">II</Button>
            <Button class="rulerTurn" id="ruler_$(var.I)">$(var.I)</Button>
        </HorizontalLayout>
        <?endforeach?>

        <!-- <HorizontalLayout>
            <Button class="rulerTurn">◄</Button>
            <Button>II</Button>
            <Button class="rulerTurn">►</Button>
            <Button>$(var.I)</Button>
        </HorizontalLayout> -->
        <HorizontalLayout>
            <Button class="rulerTurn">M</Button>

            <Text></Text>

            <Button class="rulerTurn">M</Button>
        </HorizontalLayout>
    </VerticalLayout>
    <HorizontalLayout>
        <Button class="rulerTurn">Prev</Button>
        <Text></Text>
        <Button class="rulerTurn">Next</Button>
    </HorizontalLayout>
    <Button text="X" rectAlignment="UpperRight" width="30" height="30" tooltip="Close Popup" ignoreLayout="true" onClick="030220/onClick_dismiss_ruler"  color="#FF0000" />

