<Panel id="panel" position="0 0 -500" rotation="0 0 -180" scale="0.2 0.2" height="1020" width="600" color="black" raycastTarget="False"> <!-- position="0 0 -500" rotation="90 180 0" scale="0.2 0.2"-->
  <ProgressBar id="progressBar" height="100" width="600" showPercentageText="false" color="#FFFFFFE0" percentage="100" fillImageColor="#F1EC35"></ProgressBar>
  <Button id="editButton" textColor="#000000" height="100" width="600" text="10/10"></Button>
  <Panel height="100" width="600" offsetXY="0 -100">
      <ProgressBar id="shieldProgressBar" height="100" width="600" showPercentageText="false" color="#FFFFFFE0" percentage="100" fillImageColor="#80CFE1"></ProgressBar>
      <Button id="shieldEditButton" textColor="#000000" height="100" width="600" text="3/3"></Button>
  </Panel>
  <Panel id="editPanel" height="100" width="600" offsetXY="0 300" active="False">
    <VerticalLayout>
      <HorizontalLayout spacing="73"  minheight="100">
        <Button id="subMax" text="◄"></Button>
        <Text color="#F1EC35">Max</Text>
        <Button id="addMax" text="►"></Button>
      </HorizontalLayout>
    </VerticalLayout>
  </Panel>
  <Panel id="editShieldPanel" height="100" width="600" offsetXY="0 200" active="False">
    <VerticalLayout>
      <HorizontalLayout spacing="73"  minheight="100">
        <Button id="subShieldMax" text="◄"></Button>
        <Text color="#80CFE1">Max</Text>
        <Button id="addShieldMax" text="►"></Button>
      </HorizontalLayout>
    </VerticalLayout>
  </Panel>
  <Panel id="statePanel" height="520" width="-5" offsetXY="0 470">
    <VerticalLayout>
      <HorizontalLayout spacing="5">
        <Button id="Focus" active="false">
            <Image id="Focus_3" active="false" height="512" width="512" image="Token_Focus" offsetXY="0 320" preserveAspect="true"></Image>
            <Image id="Focus_2" active="false" height="512" width="512" image="Token_Focus" offsetXY="0 160" preserveAspect="true"></Image>
            <Image image="Token_Focus" height="512" width="512" preserveAspect="true"></Image>
            <Text id="Focus_num" fontSize="400"></Text>
        </Button>
        <Button id="Evade" active="false">
            <Image id="Evade_3" active="false" height="512" width="512" image="Token_Evade" offsetXY="0 320" preserveAspect="true"></Image>
            <Image id="Evade_2" active="false" height="512" width="512" image="Token_Evade" offsetXY="0 160" preserveAspect="true"></Image>
            <Image image="Token_Evade" height="512" width="512" preserveAspect="true"></Image>
            <Text id="Evade_num" fontSize="400"></Text>
        </Button>
        <Button id="Stress" active="false">
            <Image id="Stress_3" active="false" height="512" width="512" image="Token_Stress" offsetXY="0 320" preserveAspect="true"></Image>
            <Image id="Stress_2" active="false" height="512" width="512" image="Token_Stress" offsetXY="0 160" preserveAspect="true"></Image>
            <Image image="Token_Stress" height="512" width="512" preserveAspect="true"></Image>
            <Text id="Stress_num" fontSize="400"></Text>
        </Button>
        <Button id="Ion" active="false">
            <Image id="Ion_3" active="false" height="512" width="512" image="Token_Ion" offsetXY="0 320" preserveAspect="true"></Image>
            <Image id="Ion_2" active="false" height="512" width="512" image="Token_Ion" offsetXY="0 160" preserveAspect="true"></Image>
            <Image image="Token_Ion" height="512" width="512" preserveAspect="true"></Image>
            <Text id="Ion_num" fontSize="400"></Text>
        </Button>
        <Button id="Reinforce" height="512" width="512" active="false"><Image image="Token_Reinforce" preserveAspect="true"></Image></Button>
        <Button id="Weapon_Disabled" height="512" width="512" active="false"><Image image="Token_Disabled" preserveAspect="true"></Image></Button>
        <Button id="Cloak" height="512" width="512" active="false"><Image image="Token_Cloak" preserveAspect="true"></Image></Button>
        <Button id="Critical_Hit" height="512" width="512" active="false"><Image image="Token_Crit" preserveAspect="true"></Image></Button>
        <Button id="Tractor_Beam" height="512" width="512" active="false"><Image image="Token_Tractor" preserveAspect="true"></Image></Button>
      </HorizontalLayout>
    </VerticalLayout>
