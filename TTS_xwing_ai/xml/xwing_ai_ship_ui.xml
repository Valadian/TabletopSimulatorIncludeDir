<Defaults>
  <Button onClick="onClick" fontSize="80" fontStyle="Bold" textColor="#FFFFFF" color="#00000000" raycastTarget="True"/>
  <Text fontSize="80" fontStyle="Bold" color="#FFFFFF"/>
</Defaults>
